<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:buttonStyle">@style/SkynetButton</item>
        <item name="bottomNavigationStyle">@style/SkynetBottomNav</item>
    </style>

    <style name="SkynetButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SkynetBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/primary_white</item>
        <item name="itemTextColor">@color/text_gray</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
